---
import Layout from "../layouts/Layout.astro";
import HeaderTextBig from "../components/HeaderTextBig.astro";
const headerArticle = {
  h2: "Tytu artykułu umieszczony jest tutaj",
  h3: "Morem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio.",
};
---

<Layout title="Artykuł" isHome={false}>
    <section class="pt-20 lg:pt-36 pb-12 lg:pb-36">
        <div class="container wrapper max-w-[855px] mx-auto">
          <HeaderTextBig
            h2={headerArticle.h2}
            h3={headerArticle.h3}
            textColor="text-black"
          />
        </div>
      </section>
      <section class="relative pb-40">
        <div class="relative inset-0 bg_product_gradient_1">
          <img
            src="/assets/images/product_bg.png"
            class="object-cover w-full h-full"
          />
        </div>
     
      </section>
</Layout>
<script is:inline src="/assets/js/main.js"></script>